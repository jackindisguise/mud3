{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Calendar",
	"type": "object",
	"required": [
		"name",
		"days",
		"months",
		"millisecondsPerSecond",
		"secondsPerMinute",
		"minutesPerHour",
		"hoursPerDay"
	],
	"properties": {
		"name": {
			"type": "string",
			"description": "The name of the calendar."
		},
		"days": {
			"type": "array",
			"description": "A list of days in the calendar's week.",
			"minItems": 1,
			"items": {
				"type": "object",
				"required": ["name"],
				"properties": {
					"name": {
						"type": "string",
						"description": "The name of the day."
					}
				},
				"additionalProperties": false
			}
		},
		"months": {
			"type": "array",
			"description": "A list of months in the calendar.",
			"minItems": 1,
			"items": {
				"type": "object",
				"required": ["name", "days"],
				"properties": {
					"name": {
						"type": "string",
						"description": "The name of the month."
					},
					"days": {
						"type": "integer",
						"minimum": 1,
						"description": "The number of days in the month."
					}
				},
				"additionalProperties": false
			}
		},
		"millisecondsPerSecond": {
			"type": "integer",
			"minimum": 1,
			"description": "The number of real-life milliseconds per in-calendar second."
		},
		"secondsPerMinute": {
			"type": "integer",
			"minimum": 1,
			"description": "The number of in-calendar seconds per in-calendar minute."
		},
		"minutesPerHour": {
			"type": "integer",
			"minimum": 1,
			"description": "The number of in-calendar minutes per in-calendar hour."
		},
		"hoursPerDay": {
			"type": "integer",
			"minimum": 1,
			"description": "The number of in-calendar hours per in-calendar day."
		}
	},
	"additionalProperties": false
}
