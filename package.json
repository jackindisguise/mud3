{
	"name": "mud3",
	"version": "1.17.0",
	"description": "",
	"license": "ISC",
	"author": "",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsc",
		"pretest": "npm run build",
		"test": "node scripts/test.js",
		"test:compiled": "node --test --test-reporter=spec \"dist/**/*.spec.js\"",
		"coverage": "npx c8 --reporter=html --reporter=text-summary npm run test:compiled",
		"doc": "npx typedoc",
		"deploy": "npm run build && npm run coverage && npm run doc",
		"start": "node dist/index",
		"rerun": "npm run build && npm run start",
		"post-changelog": "node scripts/post-changelog-to-board.js",
		"mapeditor": "node mud3-dungeon-editor/dist/start-map-editor.js",
		"update-mapeditor": "cd mud3-dungeon-editor && git pull origin && npm run build",
		"icon": "node scripts/generate-icon.cjs",
		"electron:dev": "npm run build && npm run icon && electron dist/src/electron/main.js",
		"electron:win:portable": "npm run build && npm run icon && electron-builder --win portable --publish never && node scripts/post-win-portable.js",
		"electron:mac": "npm run build && npm run icon && electron-builder --mac dmg --publish never && node scripts/post-mac.js",
		"electron:mac:dir": "npm run build && npm run icon && electron-builder --mac dir --publish never && node scripts/post-mac-dir.js"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.9.1",
		"c8": "^10.1.3",
		"electron": "^31.0.0",
		"electron-builder": "^25.1.8",
		"png-to-ico": "^2.1.4",
		"rimraf": "^6.0.1",
		"sharp": "^0.33.5",
		"smol-toml": "^1.4.2",
		"ts-node": "^10.9.2",
		"typedoc": "^0.28.14",
		"typescript": "^5.9.3"
	},
	"build": {
		"appId": "com.mud.mapeditor",
		"productName": "dungedit",
		"directories": {
			"output": "build/electron"
		},
		"files": [
			"dist/**/*",
			"map-editor/**/*",
			"package.json"
		],
		"extraMetadata": {
			"main": "dist/src/electron/main.js"
		},
		"asar": true,
		"win": {
			"icon": "assets/icon.ico",
			"target": [
				{
					"target": "portable",
					"arch": [
						"x64"
					]
				}
			],
			"artifactName": "dungedit-portable-${version}.exe"
		},
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": [
				{
					"target": "dmg",
					"arch": [
						"arm64"
					]
				},
				{
					"target": "dir",
					"arch": [
						"arm64"
					]
				}
			],
			"artifactName": "dungedit-${arch}-${version}.dmg"
		}
	},
	"dependencies": {
		"accurate-intervals": "github:jackindisguise/accurate-intervals",
		"js-yaml": "^4.1.0",
		"mud-ext": "github:jackindisguise/mud-ext#v2.12.1",
		"node-test-reporter": "^1.2.0",
		"package-loader": "github:jackindisguise/package-loader",
		"winston": "^3.18.3"
	}
}
