{
	"name": "mud3",
	"version": "1.24.0",
	"dungeonVersion": "1.0.0",
	"description": "",
	"license": "ISC",
	"author": "",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"clean": "rimraf dist .tsbuildinfo",
		"clean:orphans": "node scripts/clean-orphaned.js",
		"clean:all": "npm run clean",
		"postclean:all": "npm run clean:orphans",
		"build": "npm run build:list-emitted",
		"prebuild:clean": "npm run clean",
		"build:clean": "npm run build",
		"build:typecheck": "tsc --noEmit",
		"build:list-emitted": "node scripts/tsc-and-list.js",
		"pretest:cycle": "npm run build",
		"test:cycle": "npm run test",
		"test": "npm run test:parallel:ts",
		"test:ts": "node scripts/test-ts.js",
		"test:parallel": "node scripts/test-parallel.js",
		"test:parallel:ts": "node scripts/test-parallel.js --ts",
		"coverage": "npx c8 --reporter=html --reporter=text-summary npm run test",
		"doc": "npx typedoc",
		"deploy": "npm run clean && npm run build && npm run coverage && npm run doc",
		"start": "node dist/index",
		"prestart:rebuild": "npm run build",
		"start:rebuild": "node dist/index",
		"rerun": "npm run test && npm run start",
		"rerun:ts": "npm run test:ts && npm run start",
		"post-changelog": "node scripts/post-changelog-to-board.js",
		"update-dungeon-version": "node scripts/increment-dungeon-version.js",
		"start:archetype-editor": "node --import tsx/esm src/scripts/start-archetype-editor.ts",
		"start:helpfile-editor": "node --import tsx/esm src/scripts/start-helpfile-editor.ts",
		"start:character-editor": "node --import tsx/esm src/scripts/start-character-editor.ts",
		"icon": "node scripts/generate-icon.cjs",
		"electron:dev": "npm run build && npm run icon && electron dist/src/electron/main.js",
		"electron:archetype:dev": "npm run build && npm run icon && electron dist/src/electron/archetype-main.js",
		"electron:helpfile:dev": "npm run build && npm run icon && electron dist/src/electron/helpfile-main.js",
		"electron:character:dev": "npm run build && npm run icon && electron dist/src/electron/character-main.js",
		"electron:win:portable": "npm run build && npm run icon && electron-builder --win portable --publish never && node scripts/post-win-portable.js",
		"electron:mac": "npm run build && npm run icon && electron-builder --mac dmg --publish never && node scripts/post-mac.js",
		"electron:mac:dir": "npm run build && npm run icon && electron-builder --mac dir --publish never && node scripts/post-mac-dir.js"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.9.1",
		"@types/semver": "^7.7.1",
		"boxen": "^8.0.1",
		"c8": "^10.1.3",
		"chalk": "^5.6.2",
		"cli-progress": "^3.12.0",
		"electron": "^39.2.4",
		"electron-builder": "^25.1.8",
		"png-to-ico": "^2.1.4",
		"rimraf": "^6.0.1",
		"semver": "^7.7.3",
		"sharp": "^0.33.5",
		"smol-toml": "^1.4.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"typedoc": "^0.28.14",
		"typescript": "^5.9.3"
	},
	"build": {
		"appId": "com.mud.mapeditor",
		"productName": "dungedit",
		"directories": {
			"output": "build/electron"
		},
		"files": [
			"dist/**/*",
			"map-editor/**/*",
			"archetype-editor/**/*",
			"helpfile-editor/**/*",
			"character-editor/**/*",
			"package.json"
		],
		"extraMetadata": {
			"main": "dist/src/electron/main.js"
		},
		"asar": true,
		"win": {
			"icon": "assets/icon.ico",
			"target": [
				{
					"target": "portable",
					"arch": [
						"x64"
					]
				}
			],
			"artifactName": "dungedit-portable-${version}.exe"
		},
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": [
				{
					"target": "dmg",
					"arch": [
						"arm64"
					]
				},
				{
					"target": "dir",
					"arch": [
						"arm64"
					]
				}
			],
			"artifactName": "dungedit-${arch}-${version}.dmg"
		}
	},
	"dependencies": {
		"@types/ws": "^8.18.1",
		"accurate-intervals": "github:jackindisguise/accurate-intervals",
		"js-yaml": "^4.1.0",
		"mud-ext": "github:jackindisguise/mud-ext#v2.13.0",
		"node-test-reporter": "^1.2.0",
		"package-loader": "github:jackindisguise/package-loader",
		"winston": "^3.18.3",
		"ws": "^8.18.3"
	}
}
